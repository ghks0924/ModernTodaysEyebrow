<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModernTodaysEyebrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


        <!-- Customize your theme here. -->

        <!-- Font -->
        <item name="fontFamily">@font/notosanscjkkrmedium</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/notosanscjkkrbold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/main_black</item>
    </style>
</resources>